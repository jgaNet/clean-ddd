{
  "name": "my-app",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/application.js",
  "types": "dist/application.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "node dist/application.js",
    "start:dev": "nodemon --ext js,ts,json,env --exec 'tsx --tsconfig ./tsconfig.json' src/Bootstrap/Fastify/application.ts",
    "build": "node ./deployments/build.js",
    "build:clean": "rm -rf tsconfig.build.tsbuildinfo && rm -rf ./dist",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:watch": "nodemon --ext js,ts,json,env --exec 'yarn test'",
    "test:coverage": "npm run test -- --coverage",
    "test:units": "npm run test -- --passWithNoTests --testPathIgnorePatterns=e2e.spec.ts",
    "test:e2e": "npm run test -- --passWithNoTests --testPathPattern=e2e.spec.ts",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier \"./**\" --write --ignore-unknown",
    "format:check": "prettier \"./**\" --ignore-unknown --check"
  },
  "dependencies": {
    "fastify": "^5.2.1",
    "@fastify/static": "^8.1.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.3.1",
    "json-schema-to-ts": "^2.9.2",
    "jsonwebtoken": "^9.0.2",
    "tslib": "^2.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@jest/globals": "^28.0.0",
    "@jest/types": "^28.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "superagent": "^10.1.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^4.6.3"
  }
}
